@if (Entities.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Entities)
            {
                <tr>
                    <td><a href="@GetEntityUrl(entity)">@entity.Name</a></td>
                    <td>@entity.EntityType</td>
                    <td>@entity.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Empty.</p>
}

@code {
    [Parameter]
    public List<Entity> Entities { get; set; } = new();

    public string GetEntityUrl(Entity entity)
    {
        return $"/{entity.Id}";
    }
}
